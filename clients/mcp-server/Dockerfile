# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Use the official Node.js image as the base
FROM node:22.12-alpine AS builder

# Set the working directory inside the container
WORKDIR /app

# Copy project files to the working directory
COPY clients/mcp-server/package.json clients/mcp-server/package-lock.json ./
COPY clients/mcp-server/tsconfig.json ./
COPY clients/mcp-server/src ./src

# Install dependencies
RUN --mount=type=cache,target=/root/.npm npm install

# Copy the environment file for configuration
COPY clients/mcp-server/.env.dist .env

# Build the project
RUN npm run build

# Start a new build stage for a smaller final image
FROM node:22-alpine AS release

# Set the working directory inside the container
WORKDIR /app

# Copy only the necessary files from the builder stage
COPY --from=builder /app/build /app/build
COPY --from=builder /app/node_modules /app/node_modules
COPY --from=builder /app/package.json /app/package.json
COPY --from=builder /app/.env /app/.env

# Set environment variables for production
ENV NODE_ENV=production

# Define the command to run the application
ENTRYPOINT ["node", "build/index.js"]