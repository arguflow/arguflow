{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src"
  }
}
